# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Java files
[*.java]
indent_style = space
indent_size = 2
max_line_length = 100
continuation_indent_size = 4

# XML files
[*.{xml,xsd}]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 4

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Batch files
[*.{cmd,bat}]
end_of_line = crlf
indent_style = space
indent_size = 2 